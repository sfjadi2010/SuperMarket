@model List<Category>

@{
    ViewData["Title"] = "Categories";
}

@section title {
    <h1>@ViewData["Title"]</h1>
}

@if (Model is not null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-link" asp-controller="categories" asp-action="delete" asp-route-id="@category.Id" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary" asp-controller="categories" asp-action="create">Add</a>

@section Scripts {
    <script>
        function confirmDelete()
        {
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}