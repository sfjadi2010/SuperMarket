@model Product

<div class="form-group">
    <label asp-for="Name"></label>
    <input class="form-control" asp-for="Name" type="text" value="@Model.Name" readonly />
</div>
<div class="form-group">
    <label asp-for="Price"></label>
    <input class="form-control" asp-for="Price" type="text" value="@(string.Format("{0:c}", Model.Price))" readonly />
</div>