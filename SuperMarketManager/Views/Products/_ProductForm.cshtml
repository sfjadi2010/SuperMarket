@model ProductViewModel

@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="products" asp-action="@action">

    @if(action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="@Model.Product.Id" />
    }

    <div class="text text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Category" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="Product.CategoryId" class="form-control">
                <option value="">Select Category</option>

                @if (Model.Categories is not null)
                {
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Product.Name" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Quantity" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Product.Quantity" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="row md-3">
        <div class="col-2">
            <label asp-for="Product.Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Product.Price" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-6">
        </div>
    </div>
</form>